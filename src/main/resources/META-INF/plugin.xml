<idea-plugin>
    <id>com.dandoh.favorite-actions</id>
    <name>Plugin display name here</name>
    <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor>

    <description>
        NOOOOOOOOOOOOOOOOOOOO
        NOOOOOOOOOOOOOOOOOOOO
    </description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>
    <extensions defaultExtensionNs="com.intellij">
        <projectService id="FavoriteActionsService" serviceImplementation="services.FavoriteActionsService"/>
        <toolWindow id="Favorite Actions"
                    icon="PluginIcons.ICON_HEART"
                    anchor="right"
                    secondary="true"
                    factoryClass="toolwindows.FavoriteActionsToolWindowFactory"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="actions.AddActionToFavoritesAction" class="actions.AddActionToFavoritesAction"
                text="Favorite Actions: Select Action">
            <keyboard-shortcut first-keystroke="ctrl 3" keymap="$default"/>
        </action>
    </actions>

</idea-plugin>